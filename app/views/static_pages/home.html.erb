<% if logged_in? %>
  <div class="row">

    <div class="col-md-3">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </div>

    <div class="col-md-9">

      <p class="my_toptitle">投稿したカフェ</p>
      <%= render 'shared/myfeed' %>
                <p class="like_toptitle">自分がいいねしたカフェ</p>
      <%= render 'shared/likingfeed' %>
      <p class="following_toptitle">フォロワーの投稿したカフェ</p>
    　<%= render 'shared/followingfeed' %>


    </div>

  </div>
<% else %>
 <div class="image">
　<div class="home_topic">
   <h1>お気に入りのカフェを投稿しよう</h1>
   <h2>
    自分のお気に入りのカフェを投稿で共有するアプリケーションです。<br>
    住所や営業時間はもちろん、Wi-Fiやクレジットカードの利用状況まで確認いただきます。
   </h2>
 </div>
 <div class="home_loginbutton">
  <%= link_to "サインアップ", signup_path, class: "btn btn-lg btn-primary" %>
  <%= link_to 'テストログイン', test_login_path, class:"btn btn-lg btn-success" %>
 </div>
</div>
<% end %>


